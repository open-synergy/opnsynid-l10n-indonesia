<openerp>
    <data>
        <record id="djbc_lap_pemasukan_common_view_tree" model="ir.ui.view">
            <field name="name">l10n_id.djbc_kb_lap_mutasi_common Tree</field>
            <field name="model">l10n_id.djbc_kb_lap_pemasukan</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="jenis_dokumen"/>
                    <field name="no_dokumen"/>
                    <field name="tgl_dokumen"/>                        
                    <field name="no_penerimaan"/>            
                    <field name="tgl_penerimaan"/>            
                    <field name="pengirim"/>            
                    <field name="kode_barang"/>            
                    <field name="nama_barang"/>            
                    <field name="jumlah"/>            
                    <field name="satuan"/>            
                    <field name="nilai"/> 
                    <field name="warehouse_id"/>
                </tree>
            </field>
        </record>

        <record id="djbc_kb_lap_pemasukan_action" model="ir.actions.act_window">
            <field name="name">Lap. Pemasukan Barang</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n_id.djbc_kb_lap_pemasukan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="djbc_lap_pemasukan_common_view_tree"/>
        </record>

        <record id="djbc_kb_lap_pemasukan_ods_report" model="ir.actions.report.xml">
            <field name="name">Lap. Pemasukan Barang</field>
            <field name="type">ir.actions.report.xml</field>
            <field name="model">l10n_id.djbc_kb_lap_pemasukan</field>
            <field name="report_name">aeroo_reportLapPemasukanOds</field>
            <field name="report_type">aeroo</field>
            <field name="in_format">oo-ods</field>
            <field name="out_format" ref="report_aeroo.report_mimetypes_ods_ods"/>
            <field name="parser_loc">l10n_id_djbc_kb_lap_pemasukan/reports/report_lap_pemasukan.py</field>
            <field name="report_rml">l10n_id_djbc_kb_lap_pemasukan/reports/report_lap_pemasukan.ods</field>
            <field name="parser_state">loc</field>
            <field name="tml_source">file</field>
        </record>  

        <record id="djbc_kb_lap_pemasukan_xls_report" model="ir.actions.report.xml">
            <field name="name">Lap. Pemasukan Barang</field>
            <field name="type">ir.actions.report.xml</field>
            <field name="model">l10n_id.djbc_kb_lap_pemasukan</field>
            <field name="report_name">aeroo_reportLapPemasukanXls</field>
            <field name="report_type">aeroo</field>
            <field name="in_format">oo-ods</field>
            <field name="out_format" ref="report_aeroo.report_mimetypes_xls_odt"/>
            <field name="parser_loc">l10n_id_djbc_kb_lap_pemasukan/reports/report_lap_pemasukan.py</field>
            <field name="report_rml">l10n_id_djbc_kb_lap_pemasukan/reports/report_lap_pemasukan.ods</field>
            <field name="parser_state">loc</field>
            <field name="tml_source">file</field>
        </record>

    </data>
</openerp>
