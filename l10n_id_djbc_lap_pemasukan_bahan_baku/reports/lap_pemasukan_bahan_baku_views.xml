<record id="djbc_lap_pemasukan_bahan_baku_view_search" model="ir.ui.view">
    <field name="name">search l10n_id.djbc_lap_pemasukan_bahan_baku</field>
    <field name="model">l10n_id.djbc_lap_pemasukan_bahan_baku</field>
    <field name="arch" type="xml">
        <search>
            <field name="document_type_id"/>
            <field name="custom_document_id"/>
            <field name="custom_document_date"/>
            <field name="lot_id"/>
            <field name="picking_id"/>
            <field name="move_date"/>                       
            <field name="product_id"/>
            <field name="currency_id"/>
            <field name="warehouse_id"/>
            <field name="subcontract_id"/>
            <field name="country_origin_id"/>
            <group name="group0" string="Group By..">
                <filter name="filter_type" string="Custom Document Type" context="{'group_by':'document_type_id'}"/>
                <filter name="filter_doc" string="Custom Document" context="{'group_by':'custom_document_id'}"/>
                <filter name="filter_picking" string="Picking" context="{'group_by':'picking_id'}"/>
                <filter name="filter_product" string="Product" context="{'group_by':'product_id'}"/>
                <filter name="filter_currency" string="Currency" context="{'group_by':'currency_id'}"/>
                <filter name="filter_warehouse" string="Warehouse" context="{'group_by':'warehouse_id'}"/>
                <filter name="filter_country" string="Country Origin" context="{'group_by':'country_origin_id'}"/>
                <separator/>
                <filter name="filter_doc_date_day" string="Custom Document Date by Day" context="{'group_by':'custom_document_date:day'}"/>
                <filter name="filter_doc_date_week" string="Custom Document Date by Week" context="{'group_by':'custom_document_date:week'}"/>
                <filter name="filter_doc_date_month" string="Custom Document Date by Month" context="{'group_by':'custom_document_date:month'}"/>
                <filter name="filter_doc_date_year" string="Custom Document Date by Year" context="{'group_by':'custom_document_date:year'}"/>
                <separator/>
                <filter name="filter_move_date_day" string="Move Date by Day" context="{'group_by':'move_date:day'}"/>
                <filter name="filter_move_date_week" string="Move Date by Week" context="{'group_by':'move_date:week'}"/>
                <filter name="filter_move_date_month" string="Move Date by Month" context="{'group_by':'move_date:month'}"/>
                <filter name="filter_move_date_year" string="Move Date by Year" context="{'group_by':'move_date:year'}"/>
            </group>
        </search>
    </field>
</record>


