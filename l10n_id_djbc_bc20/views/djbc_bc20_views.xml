<openerp>
<data>
<record id="djbc_bc20_view_tree" model="ir.ui.view">
    <field name="name">tree l10n_id.djbc_bc20</field>
    <field name="model">l10n_id.djbc_bc20</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="date"/>            
            <field name="type_id" invisible="context.get('hide_type', True)"/>                        
        </tree>
    </field>
</record>

<record id="djbc_bc20_view_form" model="ir.ui.view">
    <field name="name">form l10n_id.djbc_bc20</field>
    <field name="model">l10n_id.djbc_bc20</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group name="group_main_1" colspan="4" col="2">
                    <field name="name"/>
                    <field name="date"/>            
                    <field name="type_id" widget="selection" invisible="context.get('hide_type', True)"/>                 
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="djbc_bc20_action" model="ir.actions.act_window">
    <field name="name">BC 2.0</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">l10n_id.djbc_bc20</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="context" eval="{'hide_type':True, 'default_type_id':ref('djbc_document_type_bc20')}"/>
</record>

<menuitem
    id="djbc_bc20_menu"
    name="BC 2.0"
    parent="l10n_id_djbc_app.djbc_custom_document_menu"
    groups="l10n_id_djbc_app.group_djbc_user"
    action="djbc_bc20_action"/>
</data>
</openerp>
