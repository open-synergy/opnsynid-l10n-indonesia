<openerp>
<data>
<record id="lap_kite_pemasukan_hasil_produksi_view_tree" model="ir.ui.view">
    <field name="name">l10n_id.lap_kite_pemasukan_hasil_produksi.tree</field>
    <field name="model">l10n_id.lap_kite_pemasukan_hasil_produksi</field>
    <field name="arch" type="xml">
        <tree create="false" edit="false" delete="false">
          <field name="no_penerimaan"/>
          <field name="tgl_penerimaan"/>
          <field name="kode_barang"/>
          <field name="nama_barang"/>
          <field name="satuan"/>
          <field name="jumlah_produksi"/>
          <field name="jumlah_disubkontrakkan"/>
        </tree>
    </field>
</record>

<record id="lap_kite_pemasukan_hasil_produksi_search" model="ir.ui.view">
    <field name="name">l10n_id.lap_kite_pemasukan_hasil_produksi.search</field>
    <field name="model">l10n_id.lap_kite_pemasukan_hasil_produksi</field>
    <field name="arch" type="xml">
      <search>
          <field name="no_penerimaan"/>
          <field name="tgl_penerimaan"/>
          <field name="kode_barang"/>
          <field name="nama_barang"/>
          <group name="group0" string="Group By..">
              <filter name="filter_picking" string="No Penerimaan" context="{'group_by':'no_penerimaan'}"/>
              <separator/>
              <filter name="filter_move_date_day" string="Tanggal Penerimaan per Hari" context="{'group_by':'tgl_penerimaan:day'}"/>
              <filter name="filter_move_date_week" string="Tanggal Penerimaan per Minggu" context="{'group_by':'tgl_penerimaan:week'}"/>
              <filter name="filter_move_date_month" string="Tanggal Penerimaan per Bulan" context="{'group_by':'tgl_penerimaan:month'}"/>
              <filter name="filter_move_date_year" string="Tanggal Penerimaan per Tahun" context="{'group_by':'tgl_penerimaan:year'}"/>
          </group>
      </search>
    </field>
</record>

<record id="lap_kite_pemasukan_hasil_produksi_action" model="ir.actions.act_window">
    <field name="name">Lap. Pemasukan Bahan Baku</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">l10n_id.lap_kite_pemasukan_hasil_produksi</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="lap_kite_pemasukan_hasil_produksi_view_tree"/>
    <field name="search_view_id" ref="lap_kite_pemasukan_hasil_produksi_search"/>
    <field name="target">current</field>
</record>

    </data>
</openerp>
